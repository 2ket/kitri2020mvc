  	<!-- <url-pattern>/aa/bb/cc/ABC</url-pattern> -->
  	<url-pattern>*.nhn</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Controller</servlet-name>
  	<servlet-class>com.java.mvc02.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Controller</servlet-name>
  	<url-pattern>*.kitri</url-pattern>
  </servlet-mapping>
